<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Cliente.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Cliente"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Inicio"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Plano del Museo"
            ContentTemplate="{DataTemplate local:Pagina_prueba}"
            Route="Pagina prueba"/>
        <ShellContent
            Title="Informacion del museo"
            ContentTemplate="{DataTemplate local:Info_museo}"
            Route="Information Museum"/>
    </TabBar>

</Shell>
